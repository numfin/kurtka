{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react",
    "jsxFactory": "Kurtka.createNode",
    "types": ["../../types/global"]
  },
  "include": ["src/main.tsx"],
  "exclude": ["node_modules"]
}
